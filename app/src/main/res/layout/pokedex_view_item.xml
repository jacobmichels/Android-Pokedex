<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>
        <variable
            name="pokemon"
            type="com.cis4030.pokedex.database.DatabasePokemon" />
        <variable
            name="backgroundColor"
            type="android.graphics.drawable.Drawable" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_rounded_corners_white"
        tools:background="@color/black">

        <TextView
            android:id="@+id/pokemon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@{pokemon.name}"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="4"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Bulbasaur" />

        <ImageView
            android:id="@+id/pokemon_sprite"
            android:layout_width="139dp"
            android:layout_height="138dp"
            android:layout_marginStart="128dp"
            android:layout_marginTop="4dp"
            android:contentDescription="Image of the current pokemon"
            app:imageUrl="@{pokemon.imageUrl}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.958"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pokemon_name"
            tools:srcCompat="@mipmap/ic_squirtle_fg" />

        <TextView
            android:id="@+id/type_1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginStart="8dp"
            android:layout_marginTop="92dp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/white"
            android:text="@{pokemon.types[0]}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Grass" />

        <TextView
            android:backgroundTint="@color/black"
            android:backgroundTintMode="multiply"
            android:textAlignment="center"
            android:id="@+id/type_2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="120dp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/white"
            android:text="@{pokemon.types[1]}"
            android:visibility="@{pokemon.types.size()>1 ? View.VISIBLE : View.GONE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Poison" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
